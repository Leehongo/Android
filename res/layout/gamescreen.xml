<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/topmenu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_koi" >

        <Button
            android:id="@+id/btnstart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/game_select_question_btn_pause"
            android:paddingLeft="2dp" />

        <TextView
            android:id="@+id/tvpoints"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/lightredshade"
            android:padding="3dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnhint"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tvpoints"
            android:background="@drawable/game_button_hint_state"
            android:padding="3dp"
            android:text="HINT"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/layouttext"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10" >

            <TextView
                android:id="@+id/tvquestion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:lines="2"
                android:background="@color/lightred"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvanswer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/lightredshade"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/btnqstnumber"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/layouttext"
            android:background="@color/lightred" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gamearea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topmenu"
        android:background="@color/lightblueshade"
        android:paddingTop="60dp" >

        <ImageView
            android:id="@+id/image01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/questionmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topmenu"
        android:layout_centerInParent="true"
        android:background="@drawable/game_select_question"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/rowonequest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnquestion1_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="5"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowtwoquest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnquestion2_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="9"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="10"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowthreequest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnquestion3_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="11"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="12"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="13"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="14"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/game_select_question_btn_red"
                android:text="15"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>