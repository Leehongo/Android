<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/topmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gamescreen_top_panel_bg"
        android:gravity="center" >

        <Button
            android:id="@+id/game_screen_btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/game_select_question_btn_pause"
            android:paddingLeft="2dp" />

        <Button
            android:id="@+id/btnqstnumber"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/game_select_question_btn_red_normal"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/layouttext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/gamescreen_question_bar"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mocha"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View
                android:layout_width="410dp"
                android:layout_height="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tvanswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mocha"
                android:textSize="17sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnhint"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/gamescreen_hint_button_state"
                android:padding="3dp"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/layoutpressed"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal" 
                android:layout_below="@+id/btnhint">

                <ImageView
                    android:id="@+id/wrong1"
                    android:layout_width="18dp"
                    android:layout_height="fill_parent"
                    android:background="@color/green_w" />

                <ImageView
                    android:id="@+id/wrong2"
                    android:layout_width="18dp"
                    android:layout_height="fill_parent"
                    android:background="@color/green_w" />

                <ImageView
                    android:id="@+id/wrong3"
                    android:layout_width="18dp"
                    android:layout_height="fill_parent"
                    android:background="@color/green_w" />

                <ImageView
                    android:id="@+id/wrong4"
                    android:layout_width="18dp"
                    android:layout_height="fill_parent"
                    android:background="@color/green_w" />

                <ImageView
                    android:id="@+id/wrong5"
                    android:layout_width="18dp"
                    android:layout_height="fill_parent"
                    android:background="@color/green_w" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_coin_bg" >

            <TextView
                android:id="@+id/tvpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/mocha"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/gamearea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topmenu"
        android:paddingTop="60dp" >

        <ImageView
            android:id="@+id/image01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <ImageView
            android:id="@+id/gamescreen_char"
            android:layout_width="190dp"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/questionmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topmenu"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/rowonequest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnquestion1_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion1_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="5"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowtwoquest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnquestion2_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="9"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion2_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="10"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowthreequest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnquestion3_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="11"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="12"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="13"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="14"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnquestion3_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@drawable/gamescreen_question_button_red_state"
                android:text="15"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>