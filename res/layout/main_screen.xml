<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_screen_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <ImageView
        android:id="@+id/mainscreen_txt_touch_to_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_touch" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/main_screen_btn_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_restart_state"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/main_screen_btn_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_sounds_on_state"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/main_screen_btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_help_state"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/main_screen_btn_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_customize_state"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/main_screen_btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_exit_state"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>