<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/wordhintlist"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/word_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:text="Misteryosong Bagay : "
            android:textColor="@color/mocha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hintword_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="word1"
            android:textColor="@color/mocha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hintword_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="word2"
            android:textColor="@color/mocha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hintword_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="word3"
            android:textColor="@color/mocha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hintword_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="word4"
            android:textColor="@color/mocha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hintword_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="word5"
            android:textColor="@color/mocha"
            android:textSize="20sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/letterAnswers"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/letterHints"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10" >

            <TextView
                android:id="@+id/answer_01"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_02"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_03"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_04"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_05"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_06"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_07"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_08"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_09"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_10"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#009900"
                android:gravity="center"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/letterHints"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp"
            android:weightSum="5" >

            <TextView
                android:id="@+id/hint_01"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="L"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hint_02"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="O"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hint_03"
