                android:layout_weight="1"
                android:gravity="center"
                android:text="E"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hint_09"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
