<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:id="@+id/select_char_layout_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:gravity="center" >

        <ImageView
            android:id="@+id/select_char_img"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/select_char_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_char_layout_char"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="7.8"
        android:gravity="center" >

        <ImageView
            android:id="@+id/select_char_img_bug"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/char_bug" />

        <ImageView
            android:id="@+id/select_char_img_tong"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:background="@drawable/char_tong" />
    </LinearLayout>

</LinearLayout>